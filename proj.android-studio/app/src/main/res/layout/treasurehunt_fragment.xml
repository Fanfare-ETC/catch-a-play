    <ImageView
        android:id="@+id/warmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@+id/holder"
        app:layout_constraintTop_toTopOf="@+id/holder"
        app:layout_constraintRight_toLeftOf="@+id/colder"
        app:srcCompat="@drawable/warm"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/colder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="@+id/holder"
        app:layout_constraintTop_toTopOf="@+id/holder"
        app:layout_constraintLeft_toRightOf="@+id/warmer"
        app:srcCompat="@drawable/cold"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/plant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warmer"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_max="361dp"
        app:srcCompat="@drawable/plant"/>

    <ImageView
        android:id="@+id/marker"
        android:layout_width="38dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/hotcoldx"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/map"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintVertical_bias="0.475"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/runner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/holder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:srcCompat="@drawable/runnercold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>
