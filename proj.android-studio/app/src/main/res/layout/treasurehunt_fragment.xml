<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <ImageView
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/holder"
        app:layout_constraintTop_toTopOf="@+id/runner"
        android:layout_marginTop="150dp" />

    <ImageView
        android:id="@+id/lineplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lineplant"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/plant"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/map"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/warmer"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/colder" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.292"
        app:srcCompat="@drawable/map2"
        app:layout_constraintTop_toTopOf="@+id/banner"
        app:layout_constraintBottom_toBottomOf="@+id/lineplant" />

    <ImageView
        android:id="@+id/linecold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/plant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/runner"
        app:srcCompat="@drawable/linecold" />

    <ImageView
        android:id="@+id/linehot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/linehot"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/runner"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.496" />

    <ImageView
        android:id="@+id/warmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/warm"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/holder"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.217" />

    <ImageView
        android:id="@+id/colder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/holder"
        app:layout_constraintRight_toRightOf="@+id/holder"
        app:layout_constraintTop_toTopOf="@+id/holder"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@drawable/cold" />

    <ImageView
        android:id="@+id/plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/plant"
        app:layout_constraintHorizontal_bias="0.496"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/marker"
        android:layout_width="38dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/hotcoldx"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/map"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintVertical_bias="0.475" />

    <ImageView
        android:id="@+id/runner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/holder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map"
        app:layout_constraintVertical_bias="0.978"
        app:srcCompat="@drawable/runnercold" />

</android.support.constraint.ConstraintLayout>
